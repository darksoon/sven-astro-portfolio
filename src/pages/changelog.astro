---
// Changelog-Seite - manuell gepflegte Eintr√§ge aus Content Collection
// Datenschutzfreundlich: Keine GitHub API, volle Kontrolle √ºber Inhalte

import { getCollection, render } from 'astro:content';
import { siteConfig, getPageTitle } from '@/config/site';
import PortfolioLayout from '@/layouts/PortfolioLayout.astro';

// Alle Changelog-Eintr√§ge laden und rendern
const entries = await getCollection('changelog');
const renderedEntries = await Promise.all(
    entries.map(async (entry) => {
        const { Content } = await render(entry);
        return { ...entry, Content };
    })
);

// Nach Datum sortieren (neueste zuerst)
renderedEntries.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

// Gruppieren nach Zeit
const now = new Date();
const today = new Date(now.getFullYear(), now.getMonth(), now.getDate());
const yesterday = new Date(today);
yesterday.setDate(yesterday.getDate() - 1);
const lastWeek = new Date(today);
lastWeek.setDate(lastWeek.getDate() - 7);

function getTimeGroup(date: Date): string {
    const entryDate = new Date(date.getFullYear(), date.getMonth(), date.getDate());
    
    if (entryDate.getTime() === today.getTime()) return 'Heute';
    if (entryDate.getTime() === yesterday.getTime()) return 'Gestern';
    if (entryDate > lastWeek) return 'Diese Woche';
    
    return date.toLocaleDateString('de-DE', { month: 'long', year: 'numeric' });
}

// Emojis f√ºr Kategorien
const categoryEmojis: Record<string, string> = {
    'Feature': '‚ú®',
    'Fix': 'üêõ',
    'Refactor': '‚ôªÔ∏è',
    'Docs': 'üìù',
    'Info': '‚ÑπÔ∏è',
};

const pageTitle = getPageTitle('Changelog', 'de');
---

<PortfolioLayout title={pageTitle}>
    <section class="changelog-section">
        <div class="container">
            <div class="section-header">
                <span class="section-tag">History</span>
                <h1 class="section-title">Changelog</h1>
                <p class="section-subtitle">Was sich auf dieser Seite ver√§ndert hat</p>
            </div>

            {renderedEntries.length === 0 && (
                <div class="empty-state">
                    <p>Noch keine Eintr√§ge vorhanden.</p>
                </div>
            )}

            <div class="timeline">
                {renderedEntries.map((entry, index) => {
                    const timeGroup = getTimeGroup(entry.data.date);
                    const prevEntry = renderedEntries[index - 1];
                    const showGroup = !prevEntry || getTimeGroup(prevEntry.data.date) !== timeGroup;
                    const Content = entry.Content;
                    
                    return (
                        <>
                            {showGroup && (
                                <div class="time-group">{timeGroup}</div>
                            )}
                            <div class="timeline-item">
                                <div class="timeline-marker">
                                    <span class="timeline-emoji">{categoryEmojis[entry.data.category] || '‚Ä¢'}</span>
                                </div>
                                <div class="timeline-content">
                                    <div class="entry-header">
                                        <h3 class="entry-title">{entry.data.title}</h3>
                                        {entry.data.version && (
                                            <span class="entry-version">v{entry.data.version}</span>
                                        )}
                                    </div>
                                    <div class="entry-meta">
                                        <time datetime={entry.data.date.toISOString()}>
                                            {entry.data.date.toLocaleDateString('de-DE', {
                                                day: 'numeric',
                                                month: 'short',
                                                year: 'numeric'
                                            })}
                                        </time>
                                        <span class="entry-category">{entry.data.category}</span>
                                    </div>
                                    <div class="entry-body">
                                        <Content />
                                    </div>
                                </div>
                            </div>
                        </>
                    );
                })}
            </div>

            <div class="info-box">
                <p>‚ÑπÔ∏è <strong>Hinweis:</strong> Dieses Changelog wird manuell gepflegt. Ich entscheide, welche √Ñnderungen √∂ffentlich sichtbar sind.</p>
            </div>
        </div>
    </section>
</PortfolioLayout>

<style>
    .changelog-section {
        padding-top: 8rem;
        padding-bottom: 4rem;
    }

    .section-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .section-tag {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        background: rgba(0, 217, 255, 0.1);
        border: 1px solid rgba(0, 217, 255, 0.3);
        border-radius: 20px;
        font-size: 0.75rem;
        color: #00d9ff;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 1rem;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        background: linear-gradient(90deg, #ff3366, #ff6b35);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .section-subtitle {
        color: #a0a0a0;
        font-size: 1.1rem;
    }


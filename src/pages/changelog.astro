        text-align: center;
        padding: 4rem 2rem;
        color: #6b6b7b;
    }

    .timeline {
        position: relative;
        max-width: 800px;
        margin: 0 auto;
    }

    .timeline::before {
        content: '';
        position: absolute;
        left: 24px;
        top: 0;
        bottom: 0;
        width: 2px;
        background: linear-gradient(to bottom, #00d9ff, #ff3366);
        opacity: 0.3;
    }

    .time-group {
        position: relative;
        margin: 2rem 0 1rem 0;
        padding-left: 60px;
        font-size: 0.85rem;
        font-weight: 600;
        color: #6b6b7b;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .timeline-item {
        position: relative;
        padding-left: 60px;
        margin-bottom: 1.5rem;
    }

    .timeline-marker {
        position: absolute;
        left: 0;
        top: 0;
        width: 48px;
        height: 48px;
        background: rgba(26, 26, 37, 0.8);
        border: 2px solid rgba(0, 217, 255, 0.3);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        z-index: 1;
    }

    .timeline-content {
        background: rgba(26, 26, 37, 0.4);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 12px;
        padding: 1.5rem;
        transition: all 0.3s ease;
    }

    .timeline-content:hover {
        background: rgba(26, 26, 37, 0.6);
        border-color: rgba(0, 217, 255, 0.2);
    }

    .entry-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 0.5rem;
        flex-wrap: wrap;
    }

    .entry-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #fff;
        margin: 0;
    }

    .entry-version {
        padding: 0.2rem 0.5rem;
        background: rgba(0, 217, 255, 0.1);
        border: 1px solid rgba(0, 217, 255, 0.2);
        border-radius: 12px;
        font-size: 0.7rem;
        font-family: 'JetBrains Mono', monospace;
        color: #00d9ff;
    }

    .entry-meta {
        display: flex;
        gap: 1rem;
        margin-bottom: 0.75rem;
        font-size: 0.8rem;
        color: #6b6b7b;
    }

    .entry-category {
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .entry-body {
        color: #a0a0a0;
        line-height: 1.6;
        font-size: 0.95rem;
    }

    .entry-body :global(p) {
        margin: 0.5rem 0;
    }

    .entry-body :global(p:first-child) {
        margin-top: 0;
    }

    .entry-body :global(p:last-child) {
        margin-bottom: 0;
    }

    .entry-body :global(ul) {
        margin: 0.5rem 0;
        padding-left: 1.5rem;
    }

    .entry-body :global(li) {
        margin: 0.25rem 0;
    }

    .entry-body :global(strong) {
        color: #fff;
    }

    .info-box {
        max-width: 800px;
        margin: 3rem auto 0;
        padding: 1rem 1.5rem;
        background: rgba(255, 193, 7, 0.1);
        border: 1px solid rgba(255, 193, 7, 0.2);
        border-radius: 8px;
        font-size: 0.9rem;
        color: #a0a0a0;
    }

    @media (max-width: 640px) {
        .section-title {
            font-size: 1.75rem;
        }

        .timeline::before {
            left: 16px;
        }

        .time-group {
            padding-left: 44px;
        }

        .timeline-item {
            padding-left: 44px;
        }

        .timeline-marker {
            width: 36px;
            height: 36px;
            font-size: 1rem;
        }
    }
</style>

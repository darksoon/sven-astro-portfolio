// src/pages/changelog.astro
// Zeigt Git-Commit-History von GitHub als Timeline an

import { siteConfig, getPageTitle } from '@/config/site';
import PortfolioLayout from '../layouts/PortfolioLayout.astro';

// GitHub API Interface
interface GitHubCommit {
  sha: string;
  commit: {
    message: string;
    author: {
      name: string;
      date: string;
    };
  };
  html_url: string;
  author?: {
    login: string;
    avatar_url: string;
  } | null;
}

// Verarbeiteter Commit f√ºr die Anzeige
interface ProcessedCommit {
  sha: string;
  shortSha: string;
  title: string;
  description: string;
  author: string;
  date: Date;
  htmlUrl: string;
  emoji: string;
}

// Emoji-Mapping f√ºr Commit-Typen
const getCommitEmoji = (message: string): string => {
  const lowerMsg = message.toLowerCase();
  if (lowerMsg.startsWith('feat') || lowerMsg.includes('add') || lowerMsg.includes('new')) return '‚ú®';
  if (lowerMsg.startsWith('fix') || lowerMsg.includes('bug') || lowerMsg.includes('fix')) return 'üêõ';
  if (lowerMsg.startsWith('docs') || lowerMsg.includes('doc') || lowerMsg.includes('readme')) return 'üìù';
  if (lowerMsg.startsWith('style') || lowerMsg.includes('css') || lowerMsg.includes('style')) return 'üé®';
  if (lowerMsg.startsWith('refactor') || lowerMsg.includes('refactor')) return '‚ôªÔ∏è';
  if (lowerMsg.startsWith('perf') || lowerMsg.includes('perf') || lowerMsg.includes('speed')) return '‚ö°';
  if (lowerMsg.startsWith('test') || lowerMsg.includes('test')) return 'üß™';
  if (lowerMsg.startsWith('chore') || lowerMsg.includes('chore') || lowerMsg.includes('deps')) return 'üîß';
  if (lowerMsg.startsWith('deploy') || lowerMsg.includes('deploy')) return 'üöÄ';
  if (lowerMsg.includes('blog') || lowerMsg.includes('post')) return 'üìÑ';
  if (lowerMsg.includes('snake') || lowerMsg.includes('game')) return 'üéÆ';
  if (lowerMsg.includes('ui') || lowerMsg.includes('design')) return 'üíÑ';
  if (lowerMsg.includes('security') || lowerMsg.includes('auth')) return 'üîí';
  return 'üîπ';
};

// Commits von GitHub API laden
let commits: ProcessedCommit[] = [];
let error: string | null = null;

try {
  const response = await fetch('https://api.github.com/repos/darksoon/sven-astro-portfolio/commits?per_page=30');
  
  if (!response.ok) {
    throw new Error(`GitHub API Error: ${response.status}`);
  }
  
  const data: GitHubCommit[] = await response.json();
  
  commits = data.map((commit) => {
    const messageLines = commit.commit.message.split('\n');
    const title = messageLines[0].trim();
    const description = messageLines.slice(1).filter(line => line.trim()).join('\n');
    
    return {
      sha: commit.sha,
      shortSha: commit.sha.substring(0, 7),
      title,
      description,
      author: commit.commit.author.name,
      date: new Date(commit.commit.author.date),
      htmlUrl: commit.html_url,
      emoji: getCommitEmoji(title),
    };
  });
} catch (e) {
  error = e instanceof Error ? e.message : 'Unbekannter Fehler';
  // Fallback: Statische Beispiel-Daten
  commits = [
    {
      sha: 'abc1234',
      shortSha: 'abc1234',
      title: 'feat: Changelog-Seite hinzugef√ºgt',
      description: 'Neue Timeline-Ansicht f√ºr Git-Commits',
      author: 'Sven Neurath',
      date: new Date(),
      htmlUrl: 'https://github.com/darksoon/sven-astro-portfolio',
      emoji: '‚ú®',
    },
    {
      sha: 'def5678',
      shortSha: 'def5678',
      title: 'fix: Mobile Navigation optimiert',
      description: 'Responsive Design verbessert',
      author: 'Sven Neurath',
      date: new Date(Date.now() - 86400000),
      htmlUrl: 'https://github.com/darksoon/sven-astro-portfolio',
      emoji: 'üêõ',
    },
    {
      sha: 'ghi9012',
      shortSha: 'ghi9012',
      title: 'docs: README aktualisiert',
      description: 'Projektbeschreibung erweitert',
      author: 'Sven Neurath',
      date: new Date(Date.now() - 172800000),
      htmlUrl: 'https://github.com/darksoon/sven-astro-portfolio',
      emoji: 'üìù',
    },
  ];
}

// Commits nach Datum gruppieren
interface CommitGroup {
  label: string;
  commits: ProcessedCommit[];
}

function groupCommitsByDate(commits: ProcessedCommit[]): CommitGroup[] {
  const groups: Map<string, ProcessedCommit[]> = new Map();
  const now = new Date();
  const today = new Date(now.getFullYear(), now.getMonth(), now.getDate());
  const yesterday = new Date(today);
  yesterday.setDate(yesterday.getDate() - 1);
  
  commits.forEach((commit) => {
    const commitDate = new Date(commit.date);
    const commitDay = new Date(commitDate.getFullYear(), commitDate.getMonth(), commitDate.getDate());
    
    let label: string;
    
    if (commitDay.getTime() === today.getTime()) {
      label = 'Heute';
    } else if (commitDay.getTime() === yesterday.getTime()) {
      label = 'Gestern';
    } else {
      // Differenz in Tagen
      const diffDays = Math.floor((today.getTime() - commitDay.getTime()) / (1000 * 60 * 60 * 24));
      
      if (diffDays < 7) {
        label = 'Diese Woche';
      } else if (diffDays < 14) {
        label = 'Letzte Woche';
      } else if (commitDate.getMonth() === now.getMonth() && commitDate.getFullYear() === now.getFullYear()) {
        label = 'Dieser Monat';
      } else {
        // Monat und Jahr
        const months = ['Januar', 'Februar', 'M√§rz', 'April', 'Mai', 'Juni', 'Juli', 'August', 'September', 'Oktober', 'November', 'Dezember'];
        label = `${months[commitDate.getMonth()]} ${commitDate.getFullYear()}`;
      }
    }
    
    if (!groups.has(label)) {
      groups.set(label, []);
    }
    groups.get(label)!.push(commit);
  });
  
  // Reihenfolge beibehalten (Heute -> Gestern -> ...)
  const order = ['Heute', 'Gestern', 'Diese Woche', 'Letzte Woche', 'Dieser Monat'];
  const result: CommitGroup[] = [];
  
  // Zuerst die bekannten Labels in Reihenfolge
  order.forEach((label) => {
    if (groups.has(label)) {
      result.push({ label, commits: groups.get(label)! });
      groups.delete(label);
    }
  });
  
  // Dann die restlichen (Monate/Jahre) - chronologisch sortiert
  const remainingLabels = Array.from(groups.keys()).sort((a, b) => {
    // Extrahiere Jahr aus "Monat Jahr"
    const yearA = parseInt(a.match(/\d{4}/)?.[0] || '0');
    const yearB = parseInt(b.match(/\d{4}/)?.[0] || '0');
    return yearB - yearA;
  });
  
  remainingLabels.forEach((label) => {
    result.push({ label, commits: groups.get(label)! });
  });
  
  return result;
}

const groupedCommits = groupCommitsByDate(commits);

const pageTitle = getPageTitle('Changelog', 'de');
const pageDescription = 'Entwicklungs-History und alle √Ñnderungen am Portfolio';

// Formatierungs-Hilfsfunktionen
function formatTime(date: Date): string {
  return date.toLocaleTimeString('de-DE', { hour: '2-digit', minute: '2-digit' });
}

function formatDateFull(date: Date): string {
  return date.toLocaleDateString('de-DE', { 
    weekday: 'long', 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  });
}

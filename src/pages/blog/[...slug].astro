---
// src/pages/blog/[...slug].astro
// Dynamische Route für einzelne Blog-Posts

import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BlogPostLayout from '@/layouts/BlogPost.astro';

// Generiere alle statischen Pfade für Blog-Posts
// In Production: Drafts werden gefiltert (404)
// In Development: Alle Posts sind sichtbar
export async function getStaticPaths() {
    const posts = await getCollection('blog', ({ data }) => {
        return import.meta.env.PROD ? data.draft !== true : true;
    });
    return posts.map((post) => ({
        params: { slug: post.slug },
        props: { post },
    }));
}

interface Props {
    post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<BlogPostLayout post={post}>
    <Content />
</BlogPostLayout>

        social.github.url,
        social.discord.url,
        social.itch.url,
    ],
    description: siteConfig.description.de,
    email: `mailto:${social.email}`,
    knowsAbout: [
        'Linux System Administration',
        'Docker & Containerization',
        'Network Infrastructure',
        'Game Development',
        'Godot Engine',
        'Web Development',
        'Homelab Infrastructure',

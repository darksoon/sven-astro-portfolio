---
// src/layouts/BlogPost.astro
// Layout für einzelne Blog-Posts - nutzt PortfolioLayout für konsistentes Design

import type { CollectionEntry } from 'astro:content';
import { siteConfig } from '@/config/site';
import PortfolioLayout from './PortfolioLayout.astro';

interface Props {
    post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { data } = post;
const { title, description, date, tags } = data;

const formattedDate = date.toLocaleDateString('de-DE', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
});

// Post URL erstellen
const postUrl = `${siteConfig.url}/blog/${post.slug}/`;

// Datum im ISO-Format für Schema.org
const isoDate = date.toISOString().split('T')[0];

// JSON-LD BlogPosting Schema für Google Rich Snippets
const blogPostingSchema = {
    '@context': 'https://schema.org',
    '@type': 'BlogPosting',
    headline: title,
    description: description,
    author: {
        '@type': 'Person',
        name: siteConfig.author.name,
        url: siteConfig.url,
    },
    datePublished: isoDate,
    dateModified: isoDate,
    url: postUrl,
    keywords: tags,
    mainEntityOfPage: {
        '@type': 'WebPage',
        '@id': postUrl,
    },
};
---

<PortfolioLayout title={`${title} | Sven Neurath`} description={description} lang="de">
    <Fragment slot="head">
        <script type="application/ld+json" set:html={JSON.stringify(blogPostingSchema)} />
    </Fragment>

    <article class="blog-post" transition:animate="slide">
        <a href="/blog" class="back-link">
            <span class="back-arrow">←</span>
            <span data-de="Zurück zum Blog" data-en="Back to Blog">Zurück zum Blog</span>
        </a>

        <header class="post-header">
            <div class="post-meta">
                <time datetime={date.toISOString()}>{formattedDate}</time>
            </div>
            <h1 class="post-title">{title}</h1>
            <p class="post-description">{description}</p>
            <div class="post-tags">
                {tags.map((tag) => (
                    <span class="post-tag">{tag}</span>
                ))}
            </div>
        </header>

        <div class="post-content">
            <slot />
        </div>

        <footer class="post-footer">
            <div class="post-footer-nav">
                <a href="/blog" class="footer-link">
                    <span class="footer-arrow">←</span>
                    <span data-de="Zurück zum Blog" data-en="Back to Blog">Zurück zum Blog</span>
                </a>
                <a href="/" class="footer-link">
                    <span data-de="Startseite" data-en="Home">Startseite</span>
                    <span class="footer-arrow">→</span>
                </a>
            </div>
        </footer>
    </article>
</PortfolioLayout>

<script is:inline>
    // Lazy Loading für alle Blog-Post Bilder
    document.addEventListener('DOMContentLoaded', function() {
        const images = document.querySelectorAll('.post-content img');
        images.forEach(function(img) {
            if (!img.hasAttribute('loading')) {
                img.setAttribute('loading', 'lazy');
            }
            if (!img.hasAttribute('decoding')) {
                img.setAttribute('decoding', 'async');
            }
        });
    });
</script>

<style>
    .blog-post {
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: #00d9ff;
        text-decoration: none;
        font-size: 0.9rem;
        margin-bottom: 2rem;
        padding: 0.5rem 1rem;
        background: rgba(0, 217, 255, 0.05);
        border: 1px solid rgba(0, 217, 255, 0.2);
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .back-link:hover {
        background: rgba(0, 217, 255, 0.1);
        border-color: rgba(0, 217, 255, 0.4);
        transform: translateX(-4px);
    }

    .back-arrow {
        transition: transform 0.3s ease;
    }

    .back-link:hover .back-arrow {
        transform: translateX(-2px);
    }

    .post-header {
        margin-bottom: 3rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .post-meta {
        margin-bottom: 1rem;
    }

    .post-meta time {
        color: #00d9ff;
        font-size: 0.9rem;
        font-family: 'JetBrains Mono', monospace;
    }

    .post-title {
        font-size: 2.5rem;
        font-weight: 800;
        margin-bottom: 1rem;
        background: linear-gradient(90deg, #ff3366, #ff6b35);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        line-height: 1.2;
    }

    .post-description {
        font-size: 1.2rem;
        color: #a0a0a0;
        margin-bottom: 1.5rem;
    }

    .post-tags {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .post-tag {
        padding: 0.25rem 0.75rem;
        background: rgba(0, 217, 255, 0.1);
        border: 1px solid rgba(0, 217, 255, 0.3);
        border-radius: 20px;
        font-size: 0.75rem;
        color: #00d9ff;
    }

    /* Markdown Content Styling */
    .post-content {
        color: #e0e0e0;
        line-height: 1.8;
    }

    .post-content :global(h2) {
        font-size: 1.75rem;
        color: #fff;
        margin-top: 3rem;
        margin-bottom: 1rem;
    }

    .post-content :global(h3) {
        font-size: 1.3rem;
        color: #fff;
        margin-top: 2rem;
        margin-bottom: 0.75rem;
    }

    .post-content :global(p) {
        margin-bottom: 1.25rem;
        color: #c0c0c0;
    }

    .post-content :global(a) {
        color: #00d9ff;
        text-decoration: none;
        border-bottom: 1px solid rgba(0, 217, 255, 0.3);
        transition: border-color 0.3s;
    }

    .post-content :global(a:hover) {
        border-color: #00d9ff;
    }

    /* Inline-Code (nicht in Code-Blöcken) */
    .post-content :global(:not(pre) > code) {
        background: rgba(0, 217, 255, 0.1);
        padding: 0.15rem 0.4rem;
        border-radius: 4px;
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.85em;
        color: #00d9ff;
    }

    /* Code-Blöcke - Basis-Styling */
    .post-content :global(pre) {
        background: #282a36 !important; /* Dracula Hintergrund */
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 12px;
        padding: 1.5rem;
        overflow-x: auto;
        margin: 1.5rem 0;
    }

    /* Shiki-spezifische Styling */
    .post-content :global(pre.shiki) {
        background: #282a36 !important;
    }

    .post-content :global(pre code) {
        background: none !important;
        padding: 0;
        font-size: 0.9rem;
        color: inherit;
        font-family: 'JetBrains Mono', monospace;
        line-height: 1.6;
    }

    /* Shiki Token-Farben bleiben erhalten */
    .post-content :global(pre .line) {
        display: block;
    }

    .post-content :global(blockquote) {
        border-left: 4px solid #00d9ff;
        padding: 1rem 1.5rem;
        margin: 1.5rem 0;
        background: rgba(0, 217, 255, 0.05);
        border-radius: 0 12px 12px 0;
    }

    .post-content :global(blockquote p) {
        color: #a0a0a0;
        margin: 0;
    }

    .post-content :global(img) {
        max-width: 100%;
        border-radius: 12px;
        margin: 1.5rem 0;
    }

    .post-content :global(ul), .post-content :global(ol) {
        padding-left: 1.5rem;
        margin-bottom: 1.25rem;
        color: #c0c0c0;
    }

    .post-content :global(li) {
        margin-bottom: 0.5rem;
    }

    .post-footer {
        margin-top: 4rem;
        padding-top: 2rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .post-footer-nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .footer-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: #00d9ff;
        text-decoration: none;
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
        background: rgba(0, 217, 255, 0.05);
        border: 1px solid rgba(0, 217, 255, 0.2);
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .footer-link:hover {
        background: rgba(0, 217, 255, 0.1);
        border-color: rgba(0, 217, 255, 0.4);
    }

    .footer-arrow {
        transition: transform 0.3s ease;
    }

    .footer-link:hover .footer-arrow {
        transform: translateX(3px);
    }

    .footer-link:first-child:hover .footer-arrow {
        transform: translateX(-3px);
    }

    @media (max-width: 768px) {
        .blog-post {
            padding: 1.5rem 1rem;
        }

        .post-title {
            font-size: 1.75rem;
        }

        .post-footer-nav {
            flex-direction: column;
            gap: 1rem;
        }

        .footer-link {
            width: 100%;
            justify-content: center;
        }
    }
</style>

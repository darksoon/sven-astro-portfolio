---
// src/layouts/PageLayout.astro
// Layout für Unterseiten (Impressum, Datenschutz, Blog-Posts, Projekte)

import { siteConfig } from '@/config/site';
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description?: string;
  lang?: 'de' | 'en';
}

const { title, description, lang = siteConfig.defaults.lang } = Astro.props;

// Übersetzungen für die Navigation
const t = {
  backToHome: {
    de: '← Zurück zur Startseite',
    en: '← Back to Home',
  },
  footerHome: {
    de: 'Zurück zur Startseite',
    en: 'Back to Home',
  },
  copyright: {
    de: `© ${siteConfig.copyright.year} ${siteConfig.copyright.holder} | `,
    en: `© ${siteConfig.copyright.year} ${siteConfig.copyright.holder} | `,
  },
};
---

<BaseLayout title={title} description={description} lang={lang}>
    <div class="page-container" transition:animate="fade">
        <a href="/" class="back-link">{t.backToHome[lang]}</a>
        
        <slot />

        <footer class="page-footer">
            <p>{t.copyright[lang]}<a href="/">{t.footerHome[lang]}</a></p>
        </footer>
    </div>
</BaseLayout>

<style>
    .page-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 3rem 2rem;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: #00d9ff;
        text-decoration: none;
        font-size: 0.9rem;
        margin-bottom: 2rem;
        transition: opacity 0.3s;
    }

    .back-link:hover {
        opacity: 0.8;
    }

    .page-footer {
        margin-top: 4rem;
        padding-top: 2rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        text-align: center;
        color: #6b6b7b;
        font-size: 0.875rem;
    }

    .page-footer a {
        color: #00d9ff;
        text-decoration: none;
    }

    .page-footer a:hover {
        text-decoration: underline;
    }
</style>
